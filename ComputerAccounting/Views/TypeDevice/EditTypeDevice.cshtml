@model ComputerAccounting.Models.TypeDevice
@Html.ValidationSummary(true)
@Styles.Render("~/Content/ValidCreate.css")
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("EditTypeDevice", "TypeDevice", FormMethod.Post))
{
    <fieldset>
        <legend>Изменить тип устройства с № @Model.Id</legend>
        @Html.HiddenFor(m => m.Id)
        @Html.HiddenFor(m => m.Status)
        <div class="form-row">
            <div class="m-3 form-group col-md-6">
                @Html.LabelFor(m => m.Tittle, "Тип устройства:", new { @class = "mb-2" })
                @Html.TextBoxFor(m => m.Tittle, new { type = "text", @class = "form-control", placeholder = "Мыши" })
                @Html.ValidationMessageFor(m => m.Tittle)
            </div>
            <input type="submit" class="m-3 btn btn-primary mt-3" value="Сохранить" />
        </div>
    </fieldset>
}
