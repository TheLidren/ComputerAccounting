@model ComputerAccounting.Models.Position
@Html.ValidationSummary(true)
@Styles.Render("~/Content/ValidCreate.css")
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("EditPosition", "Position", FormMethod.Post))
{
<fieldset>
    <legend>Изменить должность с № @Model.Id</legend>
    @Html.HiddenFor(m => m.Id)
    @Html.HiddenFor(m => m.Status)
    <div class="form-row">
        <div class="m-3 form-group col-md-6">
            @Html.LabelFor(m => m.Tittle, "Название должности:", new { @class = "mb-2" })
            @Html.TextBoxFor(m => m.Tittle, new { type = "text", @class = "form-control", placeholder = "Программист" })
            @Html.ValidationMessageFor(m => m.Tittle)
        </div>
        <input type="submit" class="m-3 btn btn-primary mt-3" value="Сохранить" />
    </div>
</fieldset>
}
