@model IEnumerable<ComputerAccounting.Models.CatalogParts>
@Styles.Render("~/Content/ListInformation.css")
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="m-3 table table-bordered">
    <tr align ="center">
        <th>Название</th>
        <th>Количество</th>
        <th>Стоимость</th>
        <th>Общая стоимость запчастей</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        var totalprice = item.Price * item.Count;
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tittle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Count) шт
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price) руб
            </td>
            <td>
                @Html.DisplayFor(modelItem => totalprice) руб
            </td>
            <td align="center">
                @Html.ActionLink("Редактировать", "EditCatalogParts", "CatalogParts", new { catalogPartsid = item.Id }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Удалить", "DeleteCatalogParts", "CatalogParts", new { catalogPartsid = item.Id }, new { @class = "btn btn-danger" })
            </td>
        </tr>   
    }
</table>

