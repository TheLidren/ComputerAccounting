@model ComputerAccounting.ListViewModel.ProviderViewModel
@Styles.Render("~/Content/ListDevice.css")
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("ListProvider", "Provider", FormMethod.Get))
{
    <div style="display:inline-block">
        @Html.Label("Критерий фильтра:")
        <input name="param" value="@ViewBag.param" placeholder="Введите критерий" class="m-4" />
        <input type="submit" value="Фильтрация" class="btn btn-light m-4" />
        @Html.ActionLink("Вывод MS Excel", "ListProvider", null, new { @class = "btn btn-success" })
    </div>
}
<table class="m-3 table table-bordered">
    <tr align="center">
        <th>
            @Html.ActionLink("ФИО", "ListProvider", new { @providerState = Model.SortViewModel.SurnameSort, @param = ViewBag.param })
        </th>
        <th>Номер телефона</th>
        <th>
            @Html.ActionLink("Организация", "ExportProvider", new { @providerState = Model.SortViewModel.OrganizationSort, @param = ViewBag.param })
        </th>
        <th>Адрес</th>
        <th></th>
    </tr>
    @foreach (var item in Model.Providers)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Surname) @Html.DisplayFor(modelItem => item.Name) @Html.DisplayFor(modelItem => item.Patronymic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Organization)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrganizationAdress)
            </td>
            <td align="center">
                @Html.ActionLink("Редактировать", "EditProvider", "Provider", new { providerid = item.Id }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Удалить", "DeleteProvider", "Provider", new { providerid = item.Id }, new { @class = "btn btn-danger" })
            </td>
        </tr>

    }
</table>

