@model ComputerAccounting.ListViewModel.LoginViewModel
@Html.ValidationSummary(true)
@Styles.Render("~/Content/ValidCreate.css")
@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<main class="form-signin w-50 m-auto mt-5">
    <div class="text-center">
        <div class="m-auto pt-4">
            <h1 class="h3 mb-3 mt-2 fw-normal">Пожалуйста, войдите</h1>
        </div>
    </div>
    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-floating" }))
    {
        <div class="form-floating">
            @Html.TextBoxFor(m => m.Email, new { type = "email", @class = "form-control" })
            @Html.LabelFor(m => m.Email, "Email:", new { @class = "mb-2" })
            @Html.ValidationMessageFor(m => m.Email)
        </div>
        <div class="form-floating">
            @Html.TextBoxFor(m => m.Password, new { type = "password", @class = "form-control" })
            @Html.LabelFor(m => m.Password, "Пароль:", new { @class = "mb-2" })
            @Html.ValidationMessageFor(m => m.Password)
        </div>
        <button class="w-100 mt-4 mb-4 btn btn-lg btn-primary" type="submit">Авторизация</button>
        @Html.ActionLink("Регистрация", "Register", "Account", null, new { @class = "w-100 btn btn-lg btn-primary" })
    }
</main>

